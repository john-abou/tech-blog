<!-- Loop over each object in the blogposts array -->
{{#each blogposts as |blogpost| }}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>
      {{blogpost.contents}}
    </p>
    <p>Created by {{blogpost.user.name}} on {{blogpost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.comment}}
    </p>
  </div>
</div>
{{/each}}
