<!-- Loop over each object in the blogposts array -->
<div class="row" id="blogpost-header">
  <div class="col-9">
    <h1>Blogposts</h1>
    <p>Click on a blogpost to see more details</p>
  </div>
  {{#if loggedIn}}
  <div class="col-3"> 
    <a class="btn btn-primary" id="new-post-btn">Create a new blogpost</a>
  </div>
  {{/if}}
</div>
<div id="blogposts-container">
  {{#each blogposts as |blogpost| }}
  <div class="row mb-4 blogpost">
    <div class="col-md-5">
      <h3>
        <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
      </h3>
      <p>
        {{blogpost.contents}}
      </p>
      <p>Created by {{blogpost.user.name}} on {{blogpost.date_created}}</p>
    </div>
  </div>
  {{/each}}
  </div>
<script src="/js/homepage.js"></script>
